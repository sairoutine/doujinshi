<% include ../_header %>
<% include ../_header_index %>
<div class="panel panel-default">
	<div class="panel-heading">
		プロフィールの編集
	</div>
	<div class="panel-body">
		<form enctype="multipart/form-data" class="form-horizontal" role="form">
			<div class="form-group">
				<label class="control-label col-sm-2" for="displayname">ニックネーム</label>
				<div class="col-sm-10">
					<p class="form-control-static"><%= user.displayname %></p>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="title">プロフィール画像</label>
				<div class="col-sm-10">
					<img src="/img/noimage.gif" width="150" height="150" class="img-thumbnail img-responsive" alt="プロフィール画像">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="url">URL</label>
				<div class="col-sm-10">
					<p class="form-control-static">http://www.sai-chan.com/</p>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="body">自己紹介</label>
				<div class="col-sm-10">
					<p class="form-control-static">ああああああああああああああああああああああああああああああああああああああああああああああああああああああ</p>
				</div>
			</div>
		</form>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		最近感想を書いた作品
	</div>
	<div class="panel-body">
		<div class="row">
		<% for(var i=0; i<4; i++) { %>
			<div class="col-md-3">
				<img src="/img/noimage.gif" class="img-thumbnail">
				<h3><a href="/doujin/i/<%= '1' %>"><%= 'title' %></a></h3>
				<p><%= 'author' %></p>
			</div>
		<% } %>
		</div>
	</div>
</div>
