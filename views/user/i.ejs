<% include ../_header %>
<% include ../_header_index %>
<div class="panel panel-default">
	<div class="panel-heading">
		プロフィール
	</div>
	<div class="panel-body">
		<form enctype="multipart/form-data" class="form-horizontal" role="form">
			<div class="form-group">
				<label class="control-label col-sm-2" for="displayname">ニックネーム</label>
				<div class="col-sm-10">
					<p class="form-control-static"><%= user.displayname %></p>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="thumbnail">プロフィール画像</label>
				<div class="col-sm-10">
					<% if (user.thumbnail) { %>
					<img src="/img/<%= user.thumbnail %>" width="48" height="48" class="img-thumbnail" alt="プロフィール画像">
					<% } else { %>
					<img src="/img/noimage.gif" width="48" height="48" class="img-thumbnail" alt="プロフィール画像">
					<% } %>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="url">URL</label>
				<div class="col-sm-10">
					<p class="form-control-static"><%= user.url %></p>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="introduction">自己紹介</label>
				<div class="col-sm-10">
					<p class="form-control-static"><%= user.introduction %></p>
				</div>
			</div>
		</form>
	</div>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		最近感想を書いた作品
	</div>
	<div class="panel-body">
		<div class="row">
		<% for(var i=0; i<doujinshi.length; i++) { %>
			<div class="col-md-3">
				<% if (doujinshi[i].thumbnail) { %>
					<img src="/img/<%= doujinshi[i].thumbnail %>" class="img-thumbnail">
				<% } else { %>
					<img src="/img/noimage.gif" class="img-thumbnail">
				<% } %>
				<h3><a href="/doujin/i/<%= doujinshi[i].id %>"><%= doujinshi[i].title %></a></h3>
				<p><%= doujinshi[i].author %></p>
			</div>
		<% } %>
		</div>
	</div>
</div>
<% include ../_footer_index %>
<% include ../_footer %>
