<% include ../_header %>
<% include ../_header_index %>
<div class="panel panel-default">
	<div class="panel-heading">
		プロフィールの編集
	</div>
	<div class="panel-body">
		<form enctype="multipart/form-data" class="form-horizontal" role="form">
			<div class="form-group">
				<label class="control-label col-sm-2" for="displayname">ニックネーム</label>
				<div class="col-sm-10">
					<input type="text" name="displayname" class="form-control" id="displayname" value="<%= user.displayname %>">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="title">プロフィール画像</label>
				<div class="col-sm-10">
					<img src="/img/noimage.gif" width="150" height="150" class="img-thumbnail img-responsive" id="thumbnail" alt="<%= "title" %>">
					<input type="file" name="image"  accept="image/*">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="url">URL</label>
				<div class="col-sm-10">
					<input type="url" class="form-control" id="url" placeholder="">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="body">自己紹介</label>
				<div class="col-sm-10">
					<textarea name="body" class="form-control" id="body" rows="5" placeholder=""></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10 text-right">
					<button type="submit" class="btn btn-success">修正</button>
				</div>
			</div>
		</form>
	</div>
</div>
<% include ../_footer_index %>
<% include ../_footer %>

