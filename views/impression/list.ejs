<% include ../_header %>
<% include ../_header_index %>
<div class="panel panel-primary">
	<div class="panel-heading">
		感想一覧
	</div>
	<div class="panel-body">
		<% impression.forEach(function(row) { %>
		<div class="row">
			<div class="col-md-3">
				<a href="/doujin/i/<%= row.doujinshi.id %>">
				<% if(row.doujinshi.thumbnail) { %>
				<img src="/img/<%= row.doujinshi.thumbnail %>" class="img-thumbnail center-block" alt="<%= row.doujinshi.title %>">
				<% } else { %>
				<img src="/img/noimage.gif" class="img-thumbnail center-block" alt="<%= row.doujinshi.title %>">
				<% } %>
				</a>
				<div class="text-center">
					<h4><a href="/doujin/i/<%= row.doujinshi.id %>"><%= row.doujinshi.title %></a></h4>
				</div>
			</div>
			<div class="col-md-9">
				<div class="well" style="white-space:pre-wrap;"><%= row.body %></div>
				<p class="text-right"><a href="/impression/i/<%= row.id %>">⇛感想の詳細へ</a></span>
			</div>
		</div>
		<hr />
		<% }); %>
		<% include ../_pagination %>
	</div>
</div>
<% include ../_footer_index %>
<% include ../_footer %>
