<% include ../_header %>
<% include ../_header_index %>
<div class="panel panel-default">
	<div class="panel-heading">
		作品情報の編集
	</div>
	<div class="panel-body">
		<form enctype="multipart/form-data" class="form-horizontal" role="form">
			<div class="form-group">
				<label class="control-label col-sm-2" for="title">タイトル</label>
				<div class="col-sm-10">
					<input type="text" name="title" class="form-control" id="title" placeholder="">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="title">表紙画像</label>
				<div class="col-sm-10">
					<img src="/img/noimage.gif" width="150" height="150" class="img-thumbnail img-responsive" id="thumbnail" alt="<%= "title" %>">
					<input type="file" name="image"  accept="image/*">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="author">著者名</label>
				<div class="col-sm-10">
					<input type="author" class="form-control" id="author" placeholder="">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="circle">サークル</label>
				<div class="col-sm-10">
					<input type="circle" class="form-control" id="circle" placeholder="">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="url">詳細URL</label>
				<div class="col-sm-10">
					<input type="url" class="form-control" id="url" placeholder="">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10 text-right">
					<button type="submit" class="btn btn-success">修正</button>
				</div>
			</div>
		</form>
	</div>
</div>
<% include ../_footer_index %>
<% include ../_footer %>
