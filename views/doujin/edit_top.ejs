<% include ../_header %>
<% include ../_header_index %>
<div class="panel panel-primary">
	<div class="panel-heading">
		小説情報の編集
	</div>
	<div class="panel-body">
		<% if (typeof error_messages !== 'undefined' && error_messages.length > 0) {  %>
		<% error_messages.forEach(function(message) { %>
		<div class="alert alert-danger" role="alert"><%= message %></div>
		<% }); %>
		<% } %>

		<form action="/doujin/edit" enctype="multipart/form-data" method="post" class="form-horizontal" role="form">
			<input type="hidden" name="id" value="<%= id %>">
			<div class="form-group">
				<label class="control-label col-sm-2" for="title">タイトル</label>
				<div class="col-sm-10">
					<input type="text" name="title" class="form-control" id="title" value="<%= title %>">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="title">表紙画像</label>
				<div class="col-sm-10">
					<% if (thumbnail) { %>
					<img src="/img/<%= thumbnail %>" class="img-thumbnail" alt="<%= title %>" id="thumbnail">
					<% } else { %>
					<img src="/img/doujin/noimage.png" width="150" height="150" class="img-thumbnail" id="thumbnail" alt="表紙画像">
					<% } %>
					<input type="file" name="cover_image"  accept="image/*">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="author">著者名</label>
				<div class="col-sm-10">
					<input type="text" name="author" class="form-control" id="author" value="<%= author %>">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="circle">サークル</label>
				<div class="col-sm-10">
					<input type="text" name="circle" class="form-control" id="circle" value="<%= circle %>">
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-sm-2" for="url">詳細URL</label>
				<div class="col-sm-10">
					<input type="tex" name="url" class="form-control" id="url" value="<%= url %>">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10 text-right">
					<button type="submit" class="btn btn-success">修正</button>
				</div>
			</div>
		</form>
	</div>
</div>
<% include ../_footer_index %>
<% include ../_footer %>
