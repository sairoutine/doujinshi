<% include ../_header_index %>
<div class="panel panel-default">
	<div class="panel-heading">
		同人小説一覧
	</div>
	<div class="panel-body">
		<div class="row">
		<% for(var i=0; i<list.length; i++) { %>
			<div class="col-md-3">
				<img src="/img/noimage.gif" class="img-thumbnail">
				<h3><a href="/doujin/i/<%= list[i].id %>"><%= list[i].title %></a></h3>
				<p><%= list[i].author %></p>
			</div>
			<% if(i % 4 === 3){ %>
			</div><div class="row">
			<% } %>
		<% } %>
		</div>

		<nav>
			<ul class="pager">
				<li><a href=""><span aria-hidden="true">&larr;</span>前へ</a></li>
				<li><a href="/doujin/list/1">次へ<span aria-hidden="true">&rarr;</span></a></li>
			</ul>
		</nav>
	</div>
</div>
