<% include ../_header %>
<% include ../_header_index %>
<div class="panel panel-default">
	<div class="panel-heading">
		作品詳細
		<a href="/doujin/edit_top/<%= id %>"><span class="glyphicon glyphicon-pencil">　</span></a>
	</div>
	<div class="panel-body">
		<div class="media">
			<div class="media-left media-middle">
				<% if(thumbnail) { %>
				<img src="/img/<%= thumbnail %>" class="media-object img-thumbnail" alt="表紙画像">
				<% } else { %>
				<img src="/img/noimage.gif" class="media-object img-thumbnail" alt="表紙画像">
				<% } %>
			</div>
			<div class="media-body">
				<div class="row">
					<div class="col-md-12">
						タイトル：<%= title %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						著者名：<%= author %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						サークル：<%= circle %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						詳細URL：<%= url %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
	<div class="panel panel-default">
	<div class="panel-heading">
		この作品の感想
	</div>
	<div class="panel-body">
		<% if(my_impression.id) { %>
		<form action="/impression/edit" method="post" role="form">
		<% } else { %>
		<form action="/impression/register" method="post" role="form">
		<% } %>
			<input type="hidden" name="id" value="<%= id %>">
			<input type="hidden" name="impression_id" value="<%= my_impression.id %>">
			<div class="form-group">
				<label for="body" class="sr-only">感想を投稿</label>
				<textarea name="body" class="form-control" rows="5" placeholder="感想を投稿する"><%= my_impression.body %></textarea><br />
				<div class="text-right">

					<% if(my_impression.id) { %>
					<button type="submit" class="btn btn-success">修正</button>
					<% } else { %>
					<button type="submit" class="btn btn-success">感想を投稿</button>
					<% } %>
				</div>
			</div>
		</form>
		<hr />

		<% impression.forEach(function(row){ %>
			<div class="row">
				<div class="col-md-12 text-left">
					<a href="/user/i/<%= row.user_id %>"><%= row.displayname %></a>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<%= row.body %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-right">
					<%= row.create_time %>
				</div>
			</div>
			<hr />
		<% }) %>

		<% include ../_pagination %>
	</div>
</div>
<% include ../_footer_index %>
<% include ../_footer %>
